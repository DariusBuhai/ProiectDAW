@model ProiectDAW.Models.Product

<div class="container">
    <br /><br />
    <a href="/Products/Index">Inapoi la produse</a>
    <br /><br />
    <a class="btn btn-info" href="/Products/New">Adauga produs</a>
    <br /><br />
    <div class="panel panel-default">
        <div class="panel-heading">@Model.Title</div>
        <div class="panel-body">
            Continut articol: <strong>@Model.Description</strong>
            <span class="label label-success pull-right">@Model.Rating / 5</span>
            <br />
        </div>
        <div class="panel-footer">
            <form method="post" action="/Products/Delete/@Model.ProductId">
                @Html.HttpMethodOverride(HttpVerbs.Delete)
                <a class="btn btn-success btn-sm" href="/Products/Edit/@Model.ProductId"><i class="glyphicon glyphicon-edit"></i> Modifica articol</a>
                <button class="btn btn-danger btn-sm pull-right" type="submit"><i class="glyphicon glyphicon-trash"></i> Sterge articol</button>
            </form>
        </div>
    </div>
    <br />
   
</div>

